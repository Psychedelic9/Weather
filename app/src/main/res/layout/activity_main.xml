<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
>
    <data>
        <variable
                name="model"
                type="com.psychedelic.weather.mvvm.MainViewModel.Model" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:fitsSystemWindows="true"
            tools:context=".fragment.BlankFragment">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary">
            <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="@{model.title}"
            />
            <Button
                    android:id="@+id/back_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:bind_onClick="@{model.onSettingClick}"
                    android:background="@drawable/dk_title_back"
            />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/choose_area_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/area_select_recycle_view_item">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>