<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 默认主题，没有标题栏 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <item name="colorAccent">@color/app_colorAccent</item>
        <item name="android:windowBackground">@color/app_window_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 登录界面主题，状态栏为白色 -->
    <style name="AppTheme.Login">
        <item name="colorPrimaryDark">@color/app_white</item>
    </style>

    <!-- 全屏，没有标题栏、状态栏 -->
    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Toolber 样式 -->
    <style name="AppToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/app_theme</item>
        <item name="android:textSize">@dimen/app_text_size_toolbar</item>
    </style>

    <!-- 分隔线样式 -->
    <style name="app_divider">
        <item name="android:background">@color/app_divider</item>
    </style>
    <style name="app_divider.vertical">
        <item name="android:layout_width">@dimen/app_divider_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="app_divider.horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_divider_width</item>
    </style>

    <!-- 进度条弹窗样式 -->
    <style name="app_progress_dialog" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="app_popup_alpha_anim">
        <item name="android:windowEnterAnimation">@anim/app_anim_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/app_anim_alpha_out</item>
    </style>

</resources>